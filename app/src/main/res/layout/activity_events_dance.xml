<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1e253e"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/front_arrow"
            android:layout_below="@+id/front_arrow"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="110dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/events_head" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView"
            android:layout_alignStart="@+id/sign_out_icon"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/sign_out_icon"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/back_arrow"
            android:src="@drawable/moksha_logo" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginTop="17dp"
            android:src="@drawable/dance_image" />

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/sign_out_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/home_icon"
            android:layout_alignParentEnd="true"
            android:src="@drawable/sign_out" />

        <ImageView
            android:id="@+id/front_arrow"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toStartOf="@+id/sign_out_icon"
            android:src="@drawable/arrow_front_bold" />

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="700dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginEnd="39dp"
            android:layout_toStartOf="@+id/kalakriti"
            android:src="@drawable/arrow_back_fade" />

        <ImageView
            android:id="@+id/oorja"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/oorja" />

        <ImageView
            android:id="@+id/kalakriti"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imageView3"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/kalakriti" />


        <ImageView
            android:id="@+id/stepup"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/oorja"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/stepup" />


        <ImageView
            android:id="@+id/mudra"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/kalakriti"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mudra" />


        <ImageView
            android:id="@+id/zephyr"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/stepup"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/zephyr" />



    </RelativeLayout>
</ScrollView>
