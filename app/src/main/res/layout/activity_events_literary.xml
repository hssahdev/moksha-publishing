<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1e253e"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/front_arrow"
            android:layout_below="@+id/front_arrow"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/back_arrow"
            android:layout_below="@+id/back_arrow"
            android:text="Previous"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView"
            android:layout_alignStart="@+id/sign_out_icon"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="110dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/events_head" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/afsana"
            android:layout_below="@+id/home_icon"
            android:layout_marginStart="19dp"
            android:src="@drawable/moksha_logo" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/imageView2"
            android:layout_marginTop="40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/lit_image" />

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/sign_out_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/home_icon"
            android:layout_alignParentEnd="true"
            android:src="@drawable/sign_out" />

        <ImageView
            android:id="@+id/front_arrow"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toStartOf="@+id/sign_out_icon"
            android:src="@drawable/arrow_front_bold" />

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/alfaaz"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginStart="32dp"
            android:src="@drawable/back_arrow_bold" />


        <ImageView
            android:id="@+id/alfaaz"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/alfaaz" />

        <ImageView
            android:id="@+id/khayal"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imageView3"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/khayal" />


        <ImageView
            android:id="@+id/verbum"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/alfaaz"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/verbum" />


        <ImageView
            android:id="@+id/afsana"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/khayal"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/afsaana" />


        <ImageView
            android:id="@+id/brahma"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_below="@id/verbum"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/brahma" />



    </RelativeLayout>
</ScrollView>
