<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e253e">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nsit_logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sign_out_icon"
            android:layout_alignStart="@+id/sign_out_icon"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/sign_out_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/home_icon"
            android:layout_alignParentEnd="true"
            android:src="@drawable/sign_out" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OORJA"
            android:textColor="@color/white"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="cursive"
            android:textColor="@color/subtext_color"
            android:text="The Western Group Dance Competition"
            android:textSize="20sp"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="Moksha, NSIT presents one of its most sought after events, Oorja- The Western Group Dance Competition.
Oorja is an event frequented by India's best College Dance Groups. With no restrictions on genre, it witnesses participants, from DU circuit and beyond, flaunting their dance moves in various enticing forms and styles!"
            android:textColor="@color/subtext_color"
            android:layout_marginTop="20dp"
            android:textSize="20sp"

            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:text="RULES FOR THE EVENT"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sub_background"
            android:textColor="@color/subtext_color"
            android:padding="20dp"
            android:fontFamily="sans-serif"

            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="1.Only one entry per college is allowed. All the team members should carry their valid College ID cards.\n\n2.At least five team members should be present at the stage at anytime during the performance.\n\n3.The dance performance should be of minimum 6 minutes and maximum 10 minutes( including Stage set up). Teams not adhering to this will be penalized.\n\n4.Use of hazardous props such as fire is strictly prohibited. Negative points will be awarded if such a case ensues.\n\n5.The decision of the judges will be binding. No dispute shall be entertained for the same."/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Contact for Queries:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:background="@color/sub_background"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/subtext_color"
            android:text="Shubhankar Singh - 9910541906\nTushar Kumar - 8800701785"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:fontFamily="sans-serif"

            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"
            android:text="Time : 3:00 PM\nThe last date for registration is : 11th March,2018\nDate : 28th March 2018"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Register Here"
            android:id="@+id/regButton"
            android:layout_marginBottom="40dp"
            android:background="@color/button"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"/>



    </LinearLayout>

    </RelativeLayout>

</ScrollView>